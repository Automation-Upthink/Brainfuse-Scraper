# Use the full Temurin runtime image with Java 21FROM eclipse-temurin:21# Non-interactive to avoid tzdata promptsENV DEBIAN_FRONTEND=noninteractive# Install Chromium + chromedriverRUN apt-get update && \    apt-get install -y --no-install-recommends \        chromium \        chromium-driver \        fonts-liberation \        tzdata && \    rm -rf /var/lib/apt/lists/*RUN ln -sf /usr/bin/chromium /usr/bin/chromium-browser && \    ln -sf /usr/bin/chromedriver /usr/local/bin/chromedriverWORKDIR /app# IMPORTANT: Match the actual name from build/libsCOPY build/libs/BF-Schedule-Scraper.jar BF-Schedule-Scraper.jarENV CHROMIUM_BIN=/usr/bin/chromium-browserENTRYPOINT ["java", "-jar", "BF-Schedule-Scraper.jar"]