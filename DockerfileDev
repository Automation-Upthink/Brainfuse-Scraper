# Use the full Temurin runtime image with Java 21FROM eclipse-temurin:21ENV DEBIAN_FRONTEND=noninteractiveRUN apt-get update && \    apt-get install -y --no-install-recommends \      chromium \      chromium-driver \      fonts-liberation \      tzdata && \    rm -rf /var/lib/apt/lists/*RUN ln -sf /usr/bin/chromium /usr/bin/chromium-browser && \    ln -sf /usr/bin/chromedriver /usr/local/bin/chromedriverWORKDIR /app# Note the correct jar name from build/libs, then rename itCOPY build/libs/BF-Schedule-Scraper-1.0.jar BF-Schedule-Scraper.jarENV CHROMIUM_BIN=/usr/bin/chromium-browserENTRYPOINT ["java", "-jar", "BF-Schedule-Scraper.jar"]